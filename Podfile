# Uncomment the next line to define a global platform for your project
platform :ios, '13.0'

def general_pods
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  
  # Pods for BaseProject
  # Network
  pod 'Moya/RxSwift', '~> 15.0'
  #Load image
  pod 'Kingfisher', '~> 7.0'
  #Keyboard
  pod 'IQKeyboardManagerSwift'
  # Reactive
  pod 'RxSwift', '~> 6.0'
  pod 'RxCocoa', '~> 6.0'
  # Dialog
  pod 'MBProgressHUD'
  # Logger
  pod 'SwiftyBeaver'
  # Auto Layout
  pod  'SnapKit' ,  '~> 5.0.0'
  #Toast
  pod 'Toast-Swift', '~> 5.0.1'
end

target 'GithubStaffs' do
  general_pods
end

target 'GithubStaffs_Dev' do
  general_pods
end
